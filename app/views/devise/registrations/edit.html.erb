<div class="main-frame">
  <div class="login-form">
    <div class="nav-wrapper white">
      <h2>개인정보 수정</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
          <%= devise_error_messages! %>

          <div class="field form-group">
            <%= f.text_field :name, autofocus: true, :required => true, placeholder: '이름' %>
          </div>

          <div class="field form-group">
            <%= f.email_field :email, autofocus: true, :required => true, placeholder: '이메일 주소' %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="field form-group">
            <i>비밀번호를 변경하지 않으려면 빈칸으로 두세요</i><br/>
            <%= f.password_field :password, autocomplete: "off", placeholder: '신규 비밀번호(6자 이상)' %>
          </div>

          <div class="field form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: '신규 비밀번호 재입력' %>
          </div>
          <div class="field form-group">
            <%= f.password_field :current_password, autocomplete: "off", :required => true, placeholder: '현재 비밀번호 입력' %>
          </div>
          <div class="actions">
            <%= f.submit "정보 수정하기", class: "btn right" %>
          </div>
      <% end %>
      <p>ㅠ_ㅠ <%= button_to "회원 탈퇴하기...", registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete %></p>
      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>