<div class="main-frame">
  <div class="login-form">
    <div class="nav-wrapper white">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: '메일주소' %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off", placeholder: '비밀번호(6자리 이상)' %>
          </div>

          <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label '아이디기억하기' %>
              </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "로그인", class: 'btn right' %>
          </div>
      <% end %>
    </div>
      <%= render "devise/shared/links" %>
  </div>
</div>