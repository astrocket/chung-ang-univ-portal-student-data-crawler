<%= form_for(@message, remote: true) do |f| %>

    <div class="form-inputs">
      <%= f.text_field :content, label: false, required: true, auturlofocus: true, placeholder: '메세지를 입력하고 엔터를 치세요' %>
    </div>
    <div class="form-actions">
      <%= f.submit :submit, class: 'btn' %>
    </div>

<% end %>