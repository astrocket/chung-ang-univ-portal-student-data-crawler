<% flash.each do |type, message| %>
    <% if type == "notice" %>
        <script>
          $(function() {
            Materialize.toast("<%= message %>", 5000);
          });
        </script>
    <% elsif type == "error" %>
        <script>
          $(function() {
            Materialize.toast("<%= message %>", 10000);
          });
        </script>
    <% else %>
        <script>
          $(function() {
            Materialize.toast("<%= message %>", 5000);
          });
        </script>
    <% end %>
<% end %>